<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".BillingDetailsActivity">


    <TextView
        android:id="@+id/title_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Billing details"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/address_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_Billing"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/biryani_semibold"
        android:text="Shipping to                 :     "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/itemsTotal_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_Billing"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/biryani_semibold"
        android:text="items                               :     "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/deliveryCharges_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemsTotal_Billing"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/biryani_semibold"
        android:text="Delivery                        :     "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/C_gst_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliveryCharges_Billing"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/biryani_semibold"
        android:text="CGST "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gst_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/C_gst_Billing"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/biryani_semibold"
        android:text="SGST "
        android:textColor="@android:color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/lining_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/gst_Billing"
        android:textSize="40sp"
        android:text="-------------------------------"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/OrderTotel_Billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lining_TextView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/biryani_semibold"
        android:text="Order Total        :     "
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/continueButton_Billing"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:textAllCaps="false"
        android:layout_below="@+id/OrderTotel_Billing"/>


</RelativeLayout>