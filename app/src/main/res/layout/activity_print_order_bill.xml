<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintOrderBillActivity">

    <TextView
        android:id="@+id/Bill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Herbal Shoppe"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@android:color/black"

        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/Layout_Name_Date"
        android:layout_below="@id/Bill_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_Name_Bill"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:text="Customer Name : "
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/Date_Bill"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:text="Date : "
            android:textSize="16sp"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black" />


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/table_Bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Layout_Name_Date"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id = "@+id/relativeLayout1"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop="5dp"
            android:background = "@color/colorBlue" >

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "2dp"
                android:text = "Sno"
                android:textColor = "#ffffff" />

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "2"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Products"
                android:textColor = "#ffffff"/>
            <TextView
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1.5"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Rate"
                android:textColor = "#ffffff" />

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1.5"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Quantity"
                android:textColor = "#ffffff" />

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "price"
                android:textColor = "#ffffff" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/recycler_view_bill"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:divider = "@null"/>

        <LinearLayout
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_below="@+id/recycler_view_bill"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">



            <TextView
                android:id="@+id/total_bill"
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Sub Total : "
                android:textColor = "@android:color/black"
                android:background="@drawable/box_blue_outlined"/>
            <TextView
                android:id="@+id/cGst_bill"
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "CGST : "
                android:textColor = "@android:color/black"
                android:background="@drawable/box_blue_outlined"/>
            <TextView
                android:id="@+id/gst_bill"
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "GST : "
                android:textColor = "@android:color/black"
                android:background="@drawable/box_blue_outlined"/>
            <TextView
                android:id="@+id/delivery_bill"
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Delivery : "
                android:textColor = "@android:color/black"
                android:background="@drawable/box_blue_outlined"/>
            <TextView
                android:id="@+id/grandTotal_Bill"
                android:layout_width = "wrap_content"
                android:layout_height = "0dp"
                android:layout_weight = "1"
                android:gravity = "start"
                android:padding = "5dp"
                android:text = "GrandTotal : "
                android:textStyle="bold"
                android:textColor = "@android:color/black"
                android:background="@drawable/box_blue_outlined"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>